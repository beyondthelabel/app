@inherits LayoutComponentBase
<style>
    .navbar-light .navbar-nav .nav-link.dropdown-toggle {
        color: #000; /* Adjust to your desired color */
    }

    .navbar-light .navbar-nav .dropdown-menu {
        background-color: #fff; /* Background color for dropdown */
        border: 1px solid #ddd; /* Optional: adds a border */
    }

        .navbar-light .navbar-nav .dropdown-menu .dropdown-item {
            color: #000; /* Color of dropdown items */
        }

            .navbar-light .navbar-nav .dropdown-menu .dropdown-item:hover {
                background-color: #f8f9fa; /* Background on hover */
                color: #007bff; /* Text color on hover */
            }

        /* Wrapper to ensure the banner stays visible and confines the text */
    .banner-wrapper {
        width: 100%;
        overflow: hidden;
        white-space: nowrap;
        background-color: #57b8ff;
        color: white;
        padding: 10px 0;
        position: relative;
    }

    /* Text that will scroll */
    .banner-text {
        display: inline-block;
        padding-left: 50%;
        animation: scrollBanner 35s linear infinite; /* Adjusted speed to 30 seconds */
    }

    /* Keyframes to control the scrolling animation */
    @@keyframes scrollBanner {
        0% {
            transform: translateX(100%);
        }
        100% {
            transform: translateX(-100%);
        }
    }

</style>
