<style>


    .icon {
        font-size: 3rem;
        color: #6c757d;
        margin-bottom: 20px;
    }

    h1, h2 {
        text-align: center;
        margin: 0 0 20px;
    }

    p {
        text-align: left;
        margin: 0 auto;
        max-width: 800px;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

    .profile-picture {
        width: 350px;
        height: 350px;
/*         border-radius: 50%;
 */        margin: 20px auto;
        display: block;
    }

    .social-links {
        margin: 20px 0;
        text-align: center;
    }

        .social-links a {
            margin: 0 10px;
            font-size: 1.5rem;
            color: #6c757d;
            text-decoration: none;
        }

            .social-links a:hover {
                color: #007bff;
            }

    .icon {
        font-size: 3rem;
        color: #6c757d; /* Default color */
        margin-bottom: 20px;
        transition: color 0.3s ease, transform 0.3s ease;
    }

        .icon i {
            background: linear-gradient(45deg, #ff7e5f, #feb47b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .icon:hover {
            color: #007bff; /* Change color on hover */
            transform: scale(1.1); /* Slight zoom effect on hover */
        }

    .break-container {
        width: 50%;
        height: 1px;
        background-color: #ccc; /* Soft gray for a subtle look */
        margin: 40px auto; /* Centers it and adds vertical spacing */
    }


</style>

<div style="margin-bottom: 2em;">

@foreach (var info in Sections)
{
        if(info.Id == "break")
        {
            <div class="container mt-4"></div>
        }
        <section id="@info.Id" class="@info.CssClass mb-5">
        @if (!string.IsNullOrEmpty(info.ImageUrl))
        {
            <img src="@info.ImageUrl" alt="@info.ImageAltText" class="@info.ImageCssClass" />
        }

        @if (!string.IsNullOrEmpty(info.Role))
        {
            <h1>@info.Role</h1>
        }

        @if (!string.IsNullOrEmpty(info.Title))
        {
            <h2>@info.Title</h2>
        }

        @if (!string.IsNullOrEmpty(info.IconClass))
        {
            <div class="icon"><i class="@info.IconClass"></i></div>
        }

        @if (!string.IsNullOrEmpty(info.Paragraph))
        {
            <p>@((MarkupString)info.Paragraph)</p>
        }

        @if (info.SocialLinks != null && info.SocialLinks.Any())
        {
            <div class="social-links">
                @foreach (var link in info.SocialLinks)
                {
                    <a href="@link.Url" target="_blank" aria-label="@link.AriaLabel">
                        <i class="@link.IconClass"></i>
                    </a>
                }
            </div>
        }
    </section>
}

</div>

<script>
    window.observeSections();
</script>


