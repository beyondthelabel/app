@page "/early-intervention-resources-in-los-angeles"

<style>
    .card {
    margin-bottom: 20px;
    height: 100%;
    }

    .card-body {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    }

    .custom-button {
        border: none;
        color: white;
        padding: 10px 20px;
        font-size: 16px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        transition: 0.3s;
    }

        .custom-button:hover {
            filter: brightness(1.2);
        }

    /* Projects Section */
    .projects-section {
        padding: 50px 0;
        text-align: center;
    }

        .projects-section h2 {
            margin-bottom: 30px;
        }
</style>



<div class="container mt-4">
    <h1 class="text-center mb-4">Early Intervention Resources in Los Angeles</h1>
    <p class="text-center">
        Early intervention can have a transformative impact on children’s development, especially for those with developmental delays or disabilities.
        By connecting families to culturally and linguistically diverse (CLD) programs, we can ensure that every child has the opportunity to thrive in an equitable environment.
    </p>

    <section id="general">
        <h2 class="projects-section">General Resources</h2>
        <div class="row">
            @foreach (var resource in generalResources)
            {
                var buttonColor = colors[random.Next(colors.Count)]; // Pick a random color

                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@resource.Title</h5>
                            <p class="card-text">@resource.Description</p>
                            <a href="@resource.Url" target="_blank" class="custom-button" style="background-color: @buttonColor;">
                                Learn More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section id="university" class="mt-4">
        <h2 class="projects-section">University and College Programs</h2>
        <div class="row">
            @foreach (var resource in universityResources)
            {
                var buttonColor = colors[random.Next(colors.Count)]; // Pick a random color

                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@resource.Title</h5>
                            <p class="card-text">@resource.Description</p>
                            <a href="@resource.Url" target="_blank" class="custom-button" style="background-color: @buttonColor;">
                                Learn More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <section id="cld" class="mt-4">
        <h2 class="projects-section">Resources for CLD Families</h2>
        <div class="row">
            @foreach (var resource in cldResources)
            {
                var buttonColor = colors[random.Next(colors.Count)]; // Pick a random color

                <div class="col-md-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@resource.Title</h5>
                            <p class="card-text">@resource.Description</p>
                            <a href="@resource.Url" target="_blank" class="custom-button" style="background-color: @buttonColor;">
                                Learn More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>

<script>
    window.observeSections();
</script>

